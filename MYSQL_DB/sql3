select * from city
 where district in ('karnataka','madya pradesh','goa')

select * from city where district = 'karnataka' and population 250000

select * from city where district = 'karnataka' and population BETWEEN 250000 and 300000;

select * from city where name like '%re;
select * from city where name like '%re' and district='karnataka';
select * from city where district='karnataka' order by name desc;
select * from city where district='karnataka' order by name asc;
select name,countrycode from city where district ='karnataka';
SELECT Name, Population from city WHERE District = 'karnataka';
select Count(*) from city where district='karnataka';
select max(population) from city where district='karnataka';
select min(population) from city where district='karnataka';
select avg(population) from city where district='karnataka';
select sum(population) from city where district='karnataka';
select * from city where district='karnataka'order by population desc limit 1;


select continent,count(*) as total_countries
from country
group by continent;


