To Show Existing Databases
        SHOW DATABASES;

To Create DB
     CREATE DATABASE <db_name>

To Delete DB
     DROP DATABASE <db_name>

To Read DB
     USE <db_name>

CREATE TABLE users(
    user_id INT,
    user_name VARCHAR(100),
    EMAIL VARCHAR(100),
    password VARCHAR(255),
    Created_at TIMESTAMP
);

DESCRIBE <table>

SELECT * FROM users;

