UPDATE emp_name 
SET first_name = "Virat"
WHERE first_name = "Supritha";

UPDATE emp_name 
SET last_name = "Kohli"
WHERE last_name = "Pri";

UPDATE emp_name 
SET first_name = "Hardik"
WHERE first_name = "Priyanka";

UPDATE emp_name 
SET last_name = "Pandya"
WHERE last_name = "Priya";


+--------+------------+-----------+
| emp_id | first_name | last_name |
+--------+------------+-----------+
|      1 | Priya      | Patel     |
|      2 | Supriya    | PE        |
|      3 | Hardik     | Pandya    |
|      4 | Virat      | Kohli     |
|      5 | Sana       | Iyer      |
+--------+------------+-----------+




DELETE FROM emp_name
WHERE emp_id = 2;

