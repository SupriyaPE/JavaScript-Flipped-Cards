--   Create database 
CREATE DATABASE my_employee;
show Databases;
use my_employee;

-- Create Employee Table

Create table employee(
  emp_id  INT primary key,
  dept_id INT,
  manager_id INT,
  hire_date DATE
);


CREATE TABLE emp_name(
    emp_id INT primary key,
    first_name VARCHAR(50),
    last_name VARCHAR(50)
);


CREATE TABLE emp_sal(
    emp_id INT,
    salery numeric(10,2),
    sal_date DATE,
    primary key(emp_id,sal_date) 
);


-- show tables;
+-----------------------+
| Tables_in_my_employee |
+-----------------------+
| emp_name              |
| emp_sal               |
| employee              |
+-----------------------+


-- Adding data to tables

insert into employee values
(1,10,NULL,'2018-01-15'),
(2,10,1,'2019-06-10'),
(3,20,1,'2020-03-25'),
(4,20,2,'2021-11-01');
