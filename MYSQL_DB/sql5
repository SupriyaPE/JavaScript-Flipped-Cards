CREATE TABLE Students (
    student_id INT PRIMARY KEY,
    student_name VARCHAR(50),
    class VARCHAR(10)
);

INSERT INTO Students (student_id, student_name, class) VALUES
(1, 'Priya', '10A'),
(2, 'Jaanu', '10A'),
(3, 'Sanu', '10B'),
(4, 'Sharu', '10B'),
(5, 'manu', '10A');

CREATE TABLE Marks (
    mark_id INT PRIMARY KEY,
    student_id INT,
    subject VARCHAR(50),
    score INT,
    FOREIGN KEY (student_id) REFERENCES Students(student_id)
);


INSERT INTO Marks (mark_id, student_id, subject, score) VALUES
(101, 1, 'Math', 88),
(102, 1, 'Science', 92),
(103, 2, 'Math', 76),
(104, 2, 'Science', 81),
(105, 3, 'Math', 90),
(106, 4, 'Science', 85);

-- Inner JOIN
-- Returns only matching rows from both tables
SELECT s.student_id, s.student_name, m.subject, m.score
FROM Students s
INNER JOIN Marks m
ON s.student_id = m.student_id;



-- LEFT Outer JOIN
-- -> All rows from Left tables
-- -> matching rows from Right tables
SELECT s.student_id, s.student_name, m.subject, m.score
FROM Students s
LEFT JOIN Marks m
ON s.student_id = m.student_id;



-- RIGHT Outer JOIN
-- -> All rows from Right tables
-- -> matching rows from Left tables
SELECT s.student_name, m.subject, m.score
FROM Students s
RIGHT JOIN Marks m
ON s.student_id = m.student_id;



-- Full JOIN
-- -> All rows from Left tables
-- -> All rows from Right tables
SELECT s.student_name, m.subject, m.score
FROM Students s
FULL OUTER JOIN Marks m
ON s.student_id = m.student_id;



-- Self JOIN
-- ->A table joined with itself
SELECT a.student_name AS student1,
       b.student_name AS student2,
       a.class
FROM Students a
JOIN Students b
ON a.class = b.class AND a.student_id <> b.student_id;


-- CROSS JOIN
-- Creates all combinations (Cartisian Product)
SELECT s.student_name, m.subject
FROM Students s
CROSS JOIN Marks m;



